<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mayank.samplemap.sample.location.SampleActivity"
    android:gravity="center">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_button"
        android:text="Test Button"
        android:onClick="checkLastLocation"
        tools:ignore="OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_location_updates"
        android:text="Start Location Updates"
        android:onClick="startLocationUpdates"
        tools:ignore="OnClick" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sample_stop_service"
        android:text="Stop Location Request"
        android:onClick="stopRequest"
        tools:ignore="OnClick" />



</LinearLayout>
